    "version": "0.2.0",
    "configurations": [
        {
            "name": "C#: SalesTerritoryApi Debug",
            "type": "dotnet",
            "request": "launch",
            "projectPath": "${workspaceFolder}/SalesTerritoryApi/SalesTerritoryApi.csproj"
        },
        {
            "cwd": "${workspaceFolder}/salesterritoryui",
            "command": "npm run dev",
            "name": "Npm run dev",
            "request": "launch",
            "type": "node-terminal"
        },
        {
            "name": "C#: SalesTerritoryApi HTTP",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "",
            "program": "${workspaceFolder}/SalesTerritoryApi/bin/Debug/net8.0/SalesTerritoryApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/SalesTerritoryApi",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "http://localhost:5123"
            },
            "launchBrowser": {
                "enabled": true,
                "args": "http://localhost:5123/swagger"
            }
        },
        {
            "name": "C#: SalesTerritoryApi HTTPS",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/SalesTerritoryApi/bin/Debug/net8.0/SalesTerritoryApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/SalesTerritoryApi",
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:7004;http://localhost:5123"
            },
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger" // Example for opening Swagger UI
            }
        }
    ],
    "compounds": [
        {
            "name": "SalesTerritoryApi (https, react)",
            "configurations": [
                "C#: SalesTerritoryApi HTTPS",
                "Npm run dev"
            ]
        }
    ]
}