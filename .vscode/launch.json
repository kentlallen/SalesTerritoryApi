{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "üöÄ Run .NET Backend",
            "type": "node-terminal",
            "request": "launch",
            "cwd": "${workspaceFolder}/SalesTerritoryApi",
            "command": "dotnet run --urls https://localhost:7004;http://localhost:5123",
            "presentation": {
                "group": "Backend",
                "order": 1
            }
        },
        {
            "name": "üêõ Debug .NET Backend",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/SalesTerritoryApi/bin/Debug/net8.0/SalesTerritoryApi.dll",
            "args": [],
            "cwd": "${workspaceFolder}/SalesTerritoryApi",
            "console": "integratedTerminal",
            "presentation": {
                "group": "Backend",
                "order": 2
            },
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development",
                "ASPNETCORE_URLS": "https://localhost:7004;http://localhost:5123"
            },
            "serverReadyAction": {
                "action": "openExternally",
                "pattern": "\\bNow listening on:\\s+(https?://\\S+)",
                "uriFormat": "%s/swagger"
            },
            "stopAtEntry": false,
            "justMyCode": false,
            "enableStepFiltering": false,
            "suppressJITOptimizations": true,
            "symbolOptions": {
                "searchPaths": [],
                "searchMicrosoftSymbolServer": true,
                "searchNuGetOrgSymbolServer": true
            },
            "logging": {
                "moduleLoad": false,
                "browserStdOut": false,
                "exceptions": true,
                "diagnosticsLog": {
                    "protocolMessages": false
                }
            }
        },
        {
            "name": "üöÄ Run React Frontend",
            "type": "node-terminal",
            "request": "launch",
            "cwd": "${workspaceFolder}/salesterritoryui",
            "command": "npm run dev",
            "presentation": {
                "group": "Frontend",
                "order": 1
            }
        },
        {
            "name": "üêõ Debug React Frontend",
            "type": "node-terminal",
            "request": "launch",
            "cwd": "${workspaceFolder}/salesterritoryui",
            "command": "npm run dev",
            "presentation": {
                "group": "Frontend",
                "order": 2
            }
        }
    ],
    "compounds": [
        {
            "name": "üöÄ Run Full Application",
            "configurations": [
                "üöÄ Run .NET Backend",
                "üöÄ Run React Frontend"
            ],
            "presentation": {
                "group": "Full Stack",
                "order": 1
            },
            "stopAll": true
        },
        {
            "name": "üêõ Debug Full Application",
            "configurations": [
                "üêõ Debug .NET Backend",
                "üêõ Debug React Frontend"
            ],
            "presentation": {
                "group": "Full Stack",
                "order": 2
            },
            "stopAll": true
        }
    ]
}